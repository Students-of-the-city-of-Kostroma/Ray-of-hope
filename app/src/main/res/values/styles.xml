<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:alertDialogStyle">@style/AlertDialogCustom</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bacl</item>
        <item name="android:alertDialogStyle">@style/AlertDialogCustom</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:background">@color/colorSYellow</item>
        <item name="android:topDark">@drawable/dialog_title</item>
        <item name="android:bottomDark">@drawable/dialog_footer</item>
        <item name="android:topBright">@drawable/dialog_title</item>
        <item name="android:bottomBright">@drawable/dialog_footer</item>

    </style>

    <style name="ChoiceTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/choice_back</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:alertDialogStyle">@style/AlertDialogCustom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">@color/colorSYellow</item>
        <item name="android:bottomDark">@color/colorSYellow</item>
        <item name="android:bottomMedium">@color/colorSYellow</item>
        <item name="android:centerBright">@color/colorSYellow</item>
        <item name="android:centerDark">@color/colorSYellow</item>
        <item name="android:centerMedium">@color/colorSYellow</item>
        <item name="android:fullBright">@color/colorSYellow</item>
        <item name="android:fullDark">@color/colorSYellow</item>
        <item name="android:topBright">@color/colorSYellow</item>
        <item name="android:topDark">@color/colorSYellow</item>
        <item name="android:background">@color/colorSYellow</item>
    </style>
    <style name="MyThemeDialog">
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
    </style>
</resources>
